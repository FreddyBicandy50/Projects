            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@+id/card_info"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/card_info"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

        <ImageView
            android:id="@+id/attendance"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_attendance"
            android:elevation="20dp"
            android:onClick="attendance"
            app:layout_constraintEnd_toEndOf="@+id/card_info"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toStartOf="@+id/card_info"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Attendance"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/attendance"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="@+id/attendance"
            app:layout_constraintTop_toBottomOf="@+id/attendance" />


        <ImageView
            android:id="@+id/payments"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_payments"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@+id/card_info"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toStartOf="@+id/card_info"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Payment"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/payments"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/payments"
            app:layout_constraintTop_toBottomOf="@+id/payments" />


        <ImageView
            android:id="@+id/quiz"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_quiz"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@+id/card_info"
            app:layout_constraintHorizontal_bias="0.617"
            app:layout_constraintStart_toStartOf="@+id/card_info"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Quiz"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/quiz"
            app:layout_constraintStart_toStartOf="@+id/quiz"
            app:layout_constraintTop_toBottomOf="@+id/quiz" />

        <ImageView
            android:id="@+id/Assignments"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_assements"
            android:elevation="20dp"
            android:onClick="assignments"
            app:layout_constraintEnd_toEndOf="@+id/card_info"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="@+id/card_info"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Assignments"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/Assignments"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/Assignments"
            app:layout_constraintTop_toBottomOf="@+id/Assignments" />

