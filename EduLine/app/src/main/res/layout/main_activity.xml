        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/icon_navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="18dp"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="0dp"
        android:layout_x="272dp"
        android:layout_y="370dp"
        android:onClick="signout"
        android:background="@drawable/icon_logout"
        app:layout_constraintStart_toEndOf="@+id/icon_calendar"
        app:layout_constraintTop_toTopOf="@+id/icon_user" />
